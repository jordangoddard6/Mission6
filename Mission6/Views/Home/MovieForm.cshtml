@model Movie
<div class="text-center">
	<h1 class="display-4">Add Movie</h1>
	<form method="post"><br />

		<input type="hidden" asp-for="MovieId" />

		<label asp-for="CategoryId">Category:</label>
		<select asp-for="CategoryId">
			<option value="" selected disabled hidden></option>
			@foreach (var x in ViewBag.Categories)
			{
				<option value="@x.CategoryId">@x.CategoryName</option>
			}
		</select>
		<br /><br />

		<label asp-for="Title">Title:</label>
		<input asp-for="Title" required/>
		<br /><br />

		<label asp-for="Year">Year:</label>
		<input asp-for="Year" type="number" min="1888" max="2026" required/>
		<br /><br />

		<label asp-for="Director">Director:</label>
		<input asp-for="Director"/>
		<br /><br />

		<label asp-for="Rating">Rating:</label>
		<select asp-for="Rating">
			<option value="" selected disabled hidden></option>
			<option value="G">G</option>
			<option value="PG">PG</option>
			<option value="PG-13">PG-13</option>
			<option value="R">R</option>
			<option value="NR">NR</option>
		</select>
		<br /><br />

		<label asp-for="Edited">Edited?</label>
		<select asp-for="Edited" required>
			<option value="" selected disabled hidden></option>
			<option value="1">Yes</option>
			<option value="0">No</option>
		</select>
		<br /><br />

		<label asp-for="LentTo">Lent to:</label>
		<input asp-for="LentTo" />
		<br /><br />

		<label asp-for="CopiedToPlex">Copied to Plex?</label>
		<select asp-for="CopiedToPlex" required>
			<option value="" selected disabled hidden></option>
			<option value="1">Yes</option>
			<option value="0">No</option>
		</select>
		<br /><br />

		<label asp-for="Notes">Notes:</label>
		<input asp-for="Notes" maxlength="15" />
		<br /><br />
		<button type="submit">Submit</button>
		<div asp-validation-summary="All"></div>
	</form>
</div>
